FROM golang:1.25-alpine AS builder

RUN apk add --no-cache git make curl
ENV GOOS=linux
ENV CGO_ENABLED=0

WORKDIR /src

COPY go.mod .
COPY go.sum .
RUN go mod download
COPY . .

RUN make kubebuilder
RUN make test
RUN make deploy-alpine


FROM alpine:3

WORKDIR /app
RUN apk add --no-cache ca-certificates wget
COPY --from=builder /src/bin/deploy .
CMD ["/app/deploy"]
